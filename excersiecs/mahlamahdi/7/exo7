
clc;
clear;
close all;
image=uint8(zeros(500,500));

image (20:220 , 20 : 220) = 255;

image (20: 150 , 230 : 470) = 255;

size = 200;
for i =250 : 250+size
    for j = 250:i
        image(i,j-220) = 255;
    end
end

start=[300,300];
size = 100;
y =0;
image(start(1),start(2)) = 255;
for i =1 : 50
       image(start(1)-i:start(1)+i,start(2)+y) = 255;
       y= y+1;
end
for i =50 : -1:1
       image(start(1)-i:start(1)+i,start(2)+y) = 255;
       y= y+1;
end
imshow(image);
